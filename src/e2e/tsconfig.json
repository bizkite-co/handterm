{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "ES2020",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": false,
    "types": ["node", "@cucumber/cucumber", "@playwright/test"]
  },
  "include": ["**/*.ts", "../../*.d.ts"],
  "exclude": ["node_modules"]
}